<h1>Make Survey <%= @survey.survey_name() %></h1>

<form action = "/survey_list/:id" method = "post">

  <input name="survey_id" type="hidden" value="<%= @survey.id() %>">
  <label for="question">Add a question: </label>
  <input type="text" name="question">
  <br />

  <button type="submit"> Add! </button>
</form>

<ul>
  <form action= "/response" method="post">

  <% @survey.questions().each() do |question| %>
  <li><%= question.question() %><li>
  <li><input type="text" name="response" value=""></li>
  <% end %>
  </form>
</ul>

<form action="/survey_edit/<%= @survey.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="survey_name">Rename Survey:</label>
  <input name="survey_name" type="text" value=" ">

  <button type="submit">Edit the Survey</button>
</form>
<br />

<form action="/survey_delete/<%= @survey.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit"> Delete This Survey </button>
</form>

<a href="/submit_survey/">Submit Survey</a>
<br />
<a href="/"> go home </a>
